<p id="notice"><%= notice %></p>

<h1>Doctor Visits</h1>

<table class="table">
  <thead>
    <tr>
      <th>Doctor</th>
      <th>Patient</th>
      <th>Disease</th>
      <th>Fee</th>
      <th>Dateofvisit</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @doctor_visits.each do |doctor_visit| %>
      <tr>
        <td><%= doctor_visit.doctor_id %></td>
        <td><%= doctor_visit.patient_id %></td>
        <td><%= doctor_visit.disease %></td>
        <td><%= doctor_visit.fee %></td>
        <td><%= doctor_visit.dateofvisit %></td>
        <td><%= link_to 'Show', doctor_visit %></td>
        <td><%= link_to 'Edit', edit_doctor_visit_path(doctor_visit) %></td>
        <td><%= link_to 'Destroy', doctor_visit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

